// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "vim_mode": true,
  "ui_font_size": 13,
  "buffer_font_size": 12,
  "buffer_font_family": "FiraCode Nerd Font",
  "uh_font_family": "FiraCode Nerd Font",
  "current_line_highlight": "none",
  "theme": {
    "mode": "system",
    "light": "Tokyo Night Light",
    "dark": "Colorizer"
  },
  "scrollbar": {
    "show": "never"
  },
  "git": {
    "git_gutter": "hide"
  },
  "project_panel": {
    "scrollbar": {
      "show": "never"
    },
    "button": true,
    "default_width": 200,
    "indent_size": 20
  },
  "outline_panel": {
    "dock": "right",
    "default_width": 200
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "preview_tabs": {
    // 沢山開きがちなので、プレビュータブで開く
    "enable_preview_from_file_finder": true,
    "enable_preview_from_quick_open": true
  },
  "gutter": {
    "line_numbers": false
  },
  "indent_guides": {
    "line_width": 2,
    "active_line_width": 2
  },
  "buffer_line_height": {
    "custom": 1.8
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "show_call_status_icon": false,
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#24283bCF",
    "status_bar.background": "#24283bCF",
    "title_bar.background": "#24283bCF",
    "panel.background": "#00000000",
    "editor.background": "#00000000",
    "editor.gutter.background": "#00000000",
    "tab_bar.background": "#00000000",
    "terminal.background": "#00000000",
    "toolbar.background": "#00000000",
    "tab.active_background": "#00000000",
    "tab.inactive_background": "#00000000",
    "border": "#00000000",
    "border.variant": "#24283b00",
    "pane_group.border": "#24283b00",
    "pane.focused_border": "#24283b00",
    "scrollbar.track.border": "#24283b00",
    "editor.active_line.background": "#24283b00"
  }
}
